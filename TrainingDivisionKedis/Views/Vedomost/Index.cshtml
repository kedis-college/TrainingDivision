@model TrainingDivisionKedis.ViewModels.Vedomost.VedIndexViewModel
@{
    ViewData["Title"] = "Ведомость";
}

<h1>Ведомость</h1>

<partial name="../Shared/_StatusMessages.cshtml">

    <div class="form-inline mb-4">
        <div class="form-group mx-1">
            <label>Выберите год:</label>
            <select id="yearId" class="custom-select my-1 mx-sm-2">
                @foreach (var year in Model.Years)
                {
                    <option value="@year.Id" selected="@(year.Current.GetValueOrDefault())">@year.Name</option>
                }
            </select>
        </div>
        <div class="form-group mx-1">
            <label>Выберите семестр:</label>
            <select id="termId" class="custom-select my-1 mx-sm-2">
                @foreach (var term in Model.Terms)
                {
                    <option value="@term.Id">@term.Id</option>
                }
            </select>
        </div>
        <input type="submit" class="btn btn-primary my-1" value="Показать" id="searchBtn" />
    </div>

    <div id="partialResults">
    </div>

    @section scripts{
        <script>
            $(document).ready(function () {
                $('#searchBtn').on('click', function () {
                    let searchParams = {
                        "YearId": $('#yearId').val(),
                        "TermId": $('#termId').val()
                    };
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("VedomostSearch", "Vedomost")",
                        contentType: "application/json; charset=utf-8",
                        beforeSend: function (xhr) {
                            xhr.setRequestHeader("XSRF-TOKEN",
                                $('input:hidden[name="__RequestVerificationToken"]').val());
                        },
                        data: JSON.stringify(searchParams),
                        success: function (response) {
                            $('#partialResults').html(response);
                        },
                        error: function (response) {
                            alert(response);
                        }
                    });
                });

            })           

            function ShowDetails(raspId) {
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("Details", "Vedomost")/" + raspId,
                    contentType: "application/json; charset=utf-8",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },

                    success: function (response) {
                        $('#partialResults').html(response);
                    },
                    error: function (response) {
                        alert(response);
                    }
                });
            };

        </script>
    }


