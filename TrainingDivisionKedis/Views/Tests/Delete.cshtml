@model TrainingDivisionKedis.Core.Models.Test

@{
    ViewData["Title"] = "Удаление | Тесты";
}

<h1>Тесты</h1>

<h3>Вы действительно хотите удалить тест?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionsTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionsTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionsPerTest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionsPerTest)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeLimit)
        </dd>
    </dl>
    
    <form asp-action="ConfirmDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="List" asp-route-subjectId="@Model.SubjectId" asp-route-termId="@Model.TermId" >Назад к списку</a>
    </form>
</div>
